@using Agency.ServiceLayer.Security
@using Auth = Agency.ServiceLayer.Security.AssignableToRolePermissions

@using Agency.Web.HtmlHelpers
@if (User.IsInRole(Auth.CanCreateTour))
{
    @Html.SideBarSecureActionLink("افزودن تور", Url.Action("Create", "Tour"), "list-group-item second-split", "fa fa-user", AssignableToRolePermissions.CanManageUser)

}
@if (User.IsInRole(Auth.CanManageTour))
{
    @Html.SideBarSecureActionLink("نمایش لیست تورها", Url.Action("List", "Tour"), "list-group-item second-split", "fa fa-user", AssignableToRolePermissions.CanManageUser)

}

