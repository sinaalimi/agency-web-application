@using System.Web.Optimization
@using System.Web.UI.HtmlControls
@using Agency.Common.HtmlHelpers
@model Agency.ViewModel.ReserveHotel.ListReserveHotelViewmodel
@{
    ViewBag.Title = "مشاهده هتل ها";
}
@Html.AntiForgeryToken()
<div class="panel panel-default">
    <div class="panel-heading">
      
    </div>
    <div class="panel-body">
        <div class="row" id="ListHotel">
            @{
                foreach (var item in Model.MainRooms)
                {
                    <div class="col-md-12" id="tour-@item.RoomId">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="row" style="height: 100px;">
                                    <div class="col-md-11">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label class="text-muted">نوع اتاق :</label>
                                                <small>@item.Type</small>
                                            </div>
                                            <div class="col-md-2">
                                                <label class="text-muted" for="group">ظرفیت :</label>
                                                <small>@item.Capacity</small>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <label class="text-muted" for="group">قیمت کل :</label>
                                                    <small>@item.TotalPrice</small>
                                                </div>
                                            </div>

                                           

                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label class="text-muted" for="group">آپشن ها :</label>
                                                <small>@item.Options</small>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="pull-left">
                                    @*///////////  اینجا رو نگاه کن*@
                                    <a href="@Url.Action("CreatePerson", "ReserveHotel", new {roomhotelid=item.RoomHotelId})" class="btn btn-sm btn-primary" type="button">
                                        <i class="fa fa-edit"></i>
                                     رزرو
                                    </a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                }


            }
        </div>
    </div>
 
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
