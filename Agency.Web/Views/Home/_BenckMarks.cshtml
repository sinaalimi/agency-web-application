@model Agency.ViewModel.Home.BenchmarkViewModel
<div class="row bench-marks">
    @if (Model.IsSystemAccount)
    {
        <div class="col-md-2">
            <div class="media btn-lg btn-info">
                <div class="media-left">
                    <span class="fa fa-users"></span>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">
                        تعداد کاربران
                        <span class="digit">@Model.UsersCount</span>
                    </h4>
                </div>
            </div>
        </div>
    }
    
    <div class="col-md-2">
        <div class="media btn-lg btn-danger">
            <div class="media-left">
                <span class="fa fa-warning"></span>
            </div>
            <div class="media-body">
                <h4 class="media-heading">
                    تعداد مشتریان
                    <span class="digit">@Model.CustomerCount</span>
                </h4>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="media btn-lg btn-warning">
            <div class="media-left">
                <span class="fa fa-user"></span>
            </div>
            <div class="media-body">
                <h4 class="media-heading">
                    تعداد تورهای فعال
                    <span class="digit">@Model.ActiveToursCount</span>
                </h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="media btn-lg btn-default">
            <div class="media-left">
                <span class="fa fa-warning"></span>
            </div>
            <div class="media-body">
                <h4 class="media-heading">
                    تعداد کل تورها
                    <span class="digit">@Model.TotalToursCount</span>
                </h4>
            </div>
        </div>
    </div>
</div>
